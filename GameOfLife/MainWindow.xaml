<Window x:Class="GameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameOfLife"
        mc:Ignorable="d"
        Title="Setup" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                <TextBlock Text="Height: " VerticalAlignment="Center"/>
                <TextBox x:Name="HeightTextBox" Width="50" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,5,0,0">
                <TextBlock Text="Width: " VerticalAlignment="Center"/>
                <TextBox x:Name="WidthTextBox" Width="50" VerticalAlignment="Center"/>
            </StackPanel>

            <Button Name="ConfirmButton" Content="Confirm" Click="ConfirmButton_Click" Width="60" Background="LightBlue"/>
            <Canvas Name="overAll"/>
        </StackPanel>
    </Grid>
</Window>
